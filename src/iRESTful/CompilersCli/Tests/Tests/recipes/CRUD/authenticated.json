{
    "name": "iRESTful/AuthenticatedCRUD",
    "version": "master",
    "license": "MIT",
    "type": "crud-rest-api",
    "urls": {
        "repository": "https://github.com/irestful-labs/test-crud-authenticated",
        "homepage": "https://github.com/irestful-labs/test-crud-authenticated"
    },
    "authors": [
        {
            "name": "Steve Rodrigue",
            "email": "steve@irestful.net",
            "url": "http://irestful.com"
        }
    ],
    "maintainer": "Steve Rodrigue",
    "project": {
        "samples": "samples.json",
        "data": "data.json",
        "code": {
            "language": "PHP",
            "file": "Authenticated.php"
        },
        "objects": {
            "endpoint": {
                "database": "pdo",
                "properties": {
                    "pattern": "pattern",
                    "is_user_mandatory": "boolean",
                    "params|?": "params[]"
                }
            },
            "api": {
                "database": "pdo",
                "properties": {
                    "base_url": "base_url",
                    "endpoints|?": "endpoint[]"
                }
            },
            "params": {
                "database": "pdo",
                "properties": {
                    "name": "string",
                    "pattern": "param_pattern",
                    "is_mandatory": "boolean"
                }
            },
            "registration": {
                "database": "pdo",
                "properties": {
                    "keyname": "keyname",
                    "title": "string",
                    "description|?": "string",
                    "roles|?": "role[]"
                }
            },
            "resource": {
                "database": "pdo",
                "properties": {
                    "endpoint": "endpoint",
                    "owner": "owner",
                    "shared_resources|?": "shared_resource[]"
                }
            },
            "shared_resource": {
                "database": "pdo",
                "properties": {
                    "permissions|?": "permission[]",
                    "owners|?": "owner[]"
                }
            },
            "owner": {
                "database": "pdo",
                "properties": {
                    "software": "software",
                    "user|?": "user"
                }
            },
            "software": {
                "database": "pdo",
                "properties": {
                    "name": "string",
                    "credentials": "credentials",
                    "roles|?": "role[]"
                }
            },
            "user": {
                "database": "pdo",
                "properties": {
                    "name": "string",
                    "credentials": "credentials",
                    "roles|?": "role[]"
                }
            },
            "role": {
                "database": "pdo",
                "properties": {
                    "title": "string",
                    "description|?": "string",
                    "permissions|?": "permission[]"
                }
            },
            "permission": {
                "database": "pdo",
                "properties": {
                    "title": "string",
                    "can_read": "boolean",
                    "can_write": "boolean",
                    "can_delete": "boolean",
                    "description|?": "string"
                }
            },
            "pattern": {
                "properties": {
                    "regex_pattern|?": "string",
                    "specific_uri|?": "uri"
                },
                "combos": [
                    "regex_pattern+|specific_uri"
                ]
            },
            "param_pattern": {
                "properties": {
                    "regex_pattern|?": "string",
                    "specific_value|?": "string"
                },
                "combos": [
                    "regex_pattern+|specific_value"
                ]
            },
            "credentials": {
                "properties": {
                    "username": "string",
                    "hashed_password": "string",
                    "password|?": "string"
                }
            }
        },
        "converters": [
            {
                "from": "string",
                "to": "base_url"
            },
            {
                "from": "string",
                "to": "uri"
            },
            {
                "from": "string",
                "to": "hashed_password"
            },
            {
                "from": "string",
                "to": "keyname"
            }
        ],
        "databases": {
            "pdo": "relational"
        },
        "types": {
            "base_url": {
                "database_type": {
                    "name": "string",
                    "max": 255
                },
                "function": "authenticated_crud_validateBaseUrl",
                "converters": {
                    "database_to_object": {
                        "from": "string",
                        "to": "base_url"
                    }
                }
            },
            "uri": {
                "database_type": {
                    "name": "string",
                    "max": 255
                },
                "function": "authenticated_crud_validateUri",
                "converters": {
                    "database_to_object": {
                        "from": "string",
                        "to": "uri"
                    }
                }
            },
            "keyname": {
                "database_type": {
                    "name": "string",
                    "max": 255
                },
                "function": "authenticated_crud_validateKeyname",
                "converters": {
                    "database_to_object": {
                        "from": "string",
                        "to": "keyname"
                    }
                }
            },
            "hashed_password": {
                "database_type": {
                    "name": "string",
                    "max": 255
                },
                "function": "authenticated_crud_validateHashedPassword",
                "converters": {
                    "database_to_object": {
                        "from": "string",
                        "to": "hashed_password"
                    }
                }
            }
        }
    }
}
